@page "/register"
@using Frontend.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="register-container">
    <div class="register-card shadow-lg">
        <div class="register-header text-center mb-4">
            <div class="icon-circle bg-success-light mb-3">
                <i class="bi bi-person-plus text-success fs-1"></i>
            </div>
            <h2 class="fw-bold">Создать аккаунт</h2>
            <p class="text-muted">Заполните данные для регистрации</p>
        </div>

        <div class="card-body">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="userInput" placeholder="Username" @bind="username">
                <label for="userInput">Имя пользователя (Логин)</label>
            </div>

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="emailInput" placeholder="name@example.com" @bind="email">
                <label for="emailInput">Email адрес</label>
            </div>

            <div class="form-floating mb-4">
                <input type="password" class="form-control" id="passInput" placeholder="Пароль" @bind="password">
                <label for="passInput">Пароль</label>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger d-flex align-items-center animate__animated animate__shakeX" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>@errorMessage</div>
                </div>
            }

            <button class="btn btn-success w-100 py-3 fw-bold rounded-3 shadow-sm mt-2 transition-btn" @onclick="HandleRegister">
                Зарегистрироваться
            </button>
        </div>

        <div class="register-footer text-center mt-4 pt-3 border-top">
            <span class="text-muted">Уже есть аккаунт?</span>
            <a href="/login" class="text-success fw-bold text-decoration-none ms-1">Войти</a>
        </div>
    </div>
</div>

<style>
    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
        background-color: #f0f2f5;
    }

    .register-card {
        background: white;
        padding: 2.5rem;
        border-radius: 2rem;
        width: 100%;
        max-width: 480px;
        border: none;
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        background-color: #e8f5e9;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .form-control {
        border-radius: 0.75rem;
        border: 1px solid #dee2e6;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.15);
    }

    .transition-btn {
        transition: all 0.3s ease;
    }

    .transition-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(25, 135, 84, 0.25);
        background-color: #157347;
    }
</style>

@code {
    private string username = "";
    private string email = "";
    private string password = "";
    private string errorMessage = "";

    private async Task HandleRegister()
    {
        errorMessage = "";

        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Пожалуйста, заполните все поля";
            return;
        }

        // Вызываем метод регистрации из AuthService
        var success = await AuthService.Register(email, password, username);
        
        if (success)
        {
            // После успешной регистрации отправляем на страницу логина
            Navigation.NavigateTo("/login");
        }
        else
        {
            errorMessage = "Ошибка регистрации. Возможно, имя пользователя уже занято.";
        }
    }
}