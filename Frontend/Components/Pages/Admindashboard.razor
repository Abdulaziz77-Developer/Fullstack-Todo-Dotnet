@page "/admin-dashboard"
@using Frontend.Services
@using Frontend.Models
@using System.IdentityModel.Tokens.Jwt
@using System.Security.Claims
@inject AdminService AdminService
@inject NavigationManager Navigation
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@rendermode InteractiveServer

<div class="admin-wrapper">
    <div class="container py-5">
        
        @if (!string.IsNullOrEmpty(debugError))
        {
            <div class="alert alert-danger shadow-sm rounded-4 animate-pop">
                <h5 class="fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Ошибка</h5>
                <p class="mb-0">@debugError</p>
                <button class="btn btn-sm btn-outline-danger mt-2" @onclick='() => debugError = ""'>Закрыть</button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="fw-bold text-dark mb-1">Панель администратора</h1>
                <p class="text-muted">Управление всеми задачами системы</p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-primary shadow-sm rounded-circle p-3 line-height-1" @onclick="ShowCreateForm">
                    <i class="bi bi-plus-lg fs-4"></i>
                </button>
                <button class="btn btn-outline-danger shadow-sm" @onclick="Logout">
                    <i class="bi bi-box-arrow-left me-2"></i> Выйти
                </button>
            </div>
        </div>

        @* Поиск *@
        <div class="card border-0 shadow-sm mb-4 rounded-4">
            <div class="card-body p-2">
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-0"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control border-0 shadow-none" placeholder="Поиск задачи или пользователя..." 
                           @bind="searchQuery" @bind:event="oninput" />
                </div>
            </div>
        </div>

        @if (showCreateForm)
        {
            <div class="card border-0 shadow mb-4 rounded-4 animate-fade-in">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Новая задача</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input class="form-control" placeholder="Название задачи" @bind="newTodoTitle" />
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" @bind="selectedUserId">
                                <option value="0">Выберите пользователя...</option>
                                @foreach (var user in allUsers)
                                {
                                    <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-success w-100 shadow-sm" @onclick="CreateTodo">Создать</button>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-3 text-muted fw-medium">Синхронизация с сервером...</p>
            </div>
        }
        else
        {
            <div class="table-responsive shadow-sm rounded-4 bg-white p-3">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="p-3 border-0">Задача</th>
                            <th class="p-3 border-0">Пользователь</th>
                            <th class="p-3 border-0 text-end">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var todo in FilteredTodos)
                        {
                            <tr>
                                <td class="p-3">
                                    <div class="fw-bold">@todo.Title</div>
                                    <span class="badge @(todo.IsCompleted ? "bg-success" : "bg-warning text-dark")">
                                        @(todo.IsCompleted ? "Готово" : "В работе")
                                    </span>
                                </td>
                                <td class="p-3 text-muted">@todo.UserName</td>
                                <td class="p-3 text-end">
                                    <button class="btn btn-sm btn-outline-primary me-2 border-0" @onclick="() => OpenEditModal(todo)">
                                        <i class="bi bi-pencil-square fs-5"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger border-0" @onclick="() => DeleteTodo(todo.Id)">
                                        <i class="bi bi-trash3 fs-5"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@* --- ВОТ ЭТОТ БЛОК НУЖНО ДОБАВИТЬ ДЛЯ РАБОТЫ EDIT --- *@
@if (showEditModal)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold">Редактировать задачу</h5>
                    <button type="button" class="btn-close" @onclick="CloseEditModal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Название задачи</label>
                        <input class="form-control" @bind="editingTodo.Title" placeholder="Введите название..." />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Исполнитель</label>
                        <select class="form-select" @bind="editingTodoUserId">
                            @foreach (var user in allUsers)
                            {
                                <option value="@user.Id">@user.UserName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button class="btn btn-light rounded-3" @onclick="CloseEditModal">Отмена</button>
                    <button class="btn btn-primary px-4 rounded-3 shadow-sm" @onclick="UpdateTodo">Сохранить</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .modal-backdrop { position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; background: rgba(0,0,0,0.5); z-index: 1040; }
    .modal { z-index: 1050; }
    .rounded-4 { border-radius: 1rem !important; }
</style>

@code {
    private List<TodoAdminResponseDto> allTodos = new();
    private List<UserDto> allUsers = new();
    private bool isLoading = true;
    private string searchQuery = "";
    private string debugError = ""; 

    private bool showCreateForm = false;
    private string newTodoTitle = "";
    private int selectedUserId;
    
    private bool showEditModal = false;
    private TodoAdminResponseDto editingTodo = new();
    private int editingTodoUserId;

    private IEnumerable<TodoAdminResponseDto> FilteredTodos => 
        allTodos.Where(t => t.Title.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) || 
                            t.UserName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(200); 
            await CheckAccess();
        }
    }

    private async Task CheckAccess()
    {
        try
        {
            var token = await LocalStorage.GetItemAsync<string>("authToken");
            if (string.IsNullOrEmpty(token)) { Navigation.NavigateTo("/login"); return; }

            var handler = new JwtSecurityTokenHandler();
            var jwtToken = handler.ReadJwtToken(token);
            var role = jwtToken.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role || c.Type == "role")?.Value;

            if (role != "Admin") { Navigation.NavigateTo("/my-todos"); return; }

            await RefreshData();
        }
        catch (Exception ex)
        {
            debugError = "Критическая ошибка: " + ex.Message;
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshData()
    {
        isLoading = true;
        StateHasChanged();
        try 
        {
            allTodos = await AdminService.GetAllTodosAsync();
            allUsers = await AdminService.GetAllUsersAsync();
            debugError = ""; 
        }
        catch (Exception ex) { debugError = "Ошибка загрузки: " + ex.Message; }
        finally { isLoading = false; StateHasChanged(); }
    }

    private void ShowCreateForm() => showCreateForm = !showCreateForm;

    private async Task CreateTodo()
    {
        if (string.IsNullOrWhiteSpace(newTodoTitle) || selectedUserId == 0) return;
        var success = await AdminService.CreateTodoAsync(newTodoTitle, selectedUserId);
        if (success) { newTodoTitle = ""; showCreateForm = false; await RefreshData(); }
    }

    private async Task DeleteTodo(int id)
    {
        if (await AdminService.DeleteTodoAsync(id)) await RefreshData();
        else debugError = "Не удалось удалить задачу.";
    }

    private void OpenEditModal(TodoAdminResponseDto todo)
    {
        editingTodo = new TodoAdminResponseDto 
        { 
            Id = todo.Id, 
            Title = todo.Title, 
            UserName = todo.UserName, 
            IsCompleted = todo.IsCompleted 
        };
        editingTodoUserId = allUsers.FirstOrDefault(u => u.UserName == todo.UserName)?.Id ?? 0;
        showEditModal = true;
    }

    private void CloseEditModal() => showEditModal = false;

    private async Task UpdateTodo()
    {
        if (string.IsNullOrWhiteSpace(editingTodo.Title) || editingTodoUserId == 0) return;
        var success = await AdminService.UpdateTodoAsync(editingTodo.Id, editingTodo.Title, editingTodoUserId);
        if (success) { showEditModal = false; await RefreshData(); }
        else debugError = "Ошибка при обновлении задачи.";
    }

    private async Task Logout()
    {
        await LocalStorage.RemoveItemAsync("authToken");
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}